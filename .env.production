# Production Environment Variables for Vercel Deployment
NODE_ENV=production

# Supabase Configuration
DATABASE_URL=your_supabase_database_url_here
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PostgreSQL Direct Connection (from Supabase)
PGHOST=your_supabase_host
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=your_supabase_password

# Authentication
SESSION_SECRET=your_session_secret_here

# Email Service (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Payment Processing (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_here

# AI Services (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
REPLIT_DOMAINS=your-app-name.vercel.app
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_replit_id_here